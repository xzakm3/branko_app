
<% if !current_user?(user) %>
    <div class="row">
      <%#= gravatar_for user, size: 50 %>
      <div class="col-xs-3 col-xs-offset-1 col-sm-3 col-sm-offset-1 col-md-3 col-md-offset-1">
        <%= user.name %>
      </div>
      <div class="col-xs-2 col-xs-offset-6 col-sm-2 col-sm-offset-6 col-md-2 col-md-offset-6">
        <%= link_to user, method: :delete,
                    data: {confirm: "You sure?"} do %>
            <span class="glyphicon glyphicon-remove"></span>
        <% end %>
      </div>
    </div>
<% end %>